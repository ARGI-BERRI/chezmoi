alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias mkdir='mkdir -p'

alias ps='ps --srot=start_time'
alias which='type -a'
alias job='jobs -l'

alias du='du -kh'
alias df='df -kTh'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias ls='eza -F'
alias ll='eza --header -l -F'
alias lt='eza --header -l -F -T'
alias htop='btm'
alias top='btm'
alias du='dust -p -X .git'

alias ..='cd ..'
